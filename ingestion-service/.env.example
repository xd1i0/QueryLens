# Elasticsearch Configuration
ELASTICSEARCH_HOST=http://elasticsearch:9200
ELASTICSEARCH_INDEX=docs
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_VERIFY_CERTS=false

# JWT Configuration
JWT_SECRET_KEY=your-super-secure-secret-key-at-least-32-characters-long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
JWT_ISSUER=querylens-api
JWT_AUDIENCE=querylens-users

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
APP_TITLE=QueryLens Ingestion & Search

# Document Processing Configuration
CHUNK_MAX_TOKENS=250
CHUNK_OVERLAP=50
CHUNK_THRESHOLD_WORDS=500
TEST_FILE_PATH=/app/test_files

# Security Configuration
RATE_LIMIT_REQUESTS_PER_HOUR=1000
ALLOWED_HOSTS=localhost,127.0.0.1
